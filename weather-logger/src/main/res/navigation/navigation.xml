        android:id="@+id/fragmentHome"
        android:name="com.talmir.weatherlogger.domain.screens.home.HomeFragment"
        android:label="FragmentHome" >
        <action
            android:id="@+id/action_fragmentHome_to_fragmentCityForecastDetails"
            app:destination="@id/fragmentCityForecastDetails" />
    </fragment>
    <fragment
        android:id="@+id/fragmentCityForecastDetails"
        android:name="com.talmir.weatherlogger.domain.screens.details.CityForecastDetailsFragment"
        android:label="FragmentCityForecastDetails" >
        <argument
            android:name="cityId"
            app:argType="integer"
            android:defaultValue="587084" />
    </fragment>
</navigation>